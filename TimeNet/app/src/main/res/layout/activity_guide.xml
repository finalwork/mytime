<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.medince.SplashActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></android.support.v4.view.ViewPager>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp">

        <LinearLayout
            android:id="@+id/ll_points_splash"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:orientation="horizontal"
            ></LinearLayout>
        <ImageView
            android:id="@+id/iv_splash_red_point"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/splash_red_point"/>
    </FrameLayout>
    <TextView
        android:id="@+id/tv_pager_num"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/4"
        android:visibility="visible"
        android:textColor="#ffffff"
        android:textSize="20sp"/>

    <ImageButton
        android:visibility="gone"
        android:id="@+id/ib_to_main"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/lead_bg4_btn"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_guide_dec"
        android:layout_above="@+id/ib_to_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lead_bg4_des"
        />
    <ImageButton
        android:layout_alignParentRight="true"
        android:id="@+id/ib_pass_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_ship"/>


</RelativeLayout>
