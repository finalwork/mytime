<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    >
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_home_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ababab"
        android:layout_marginBottom="35dp">
    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/rl_home_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home_search_background"
        android:layout_margin="10dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/home_search_icon"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/title_bar_search_zoomin"/>
        <TextView
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/home_search_icon"
            android:layout_alignBottom="@+id/home_search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="影片/影人/影院 任你搜"
            android:textSize="18sp"
            android:textColor="#aaaaff"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_scan"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_above="@+id/rl_home_scan"
        android:id="@+id/ll_home_header_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        >
    </LinearLayout>



</RelativeLayout>